<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idRLBSheet"
    android:background="@color/grey"
    android:padding="5dp">


    <TextView
        android:id="@+id/idEventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        android:text="Event Name"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/idEventImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/idEventName"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:padding="4dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/idEventLoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idEventName"
        android:layout_margin="4dp"
        android:layout_toEndOf="@id/idEventImg"
        android:layout_toRightOf="@id/idEventImg"
        android:padding="3dp"
        android:text="Event Address"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/idEventOrg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idEventLoc"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idEventImg"
        android:padding="3dp"
        android:text="Organizer by"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/idEventDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idEventOrg"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idEventImg"
        android:padding="3dp"
        android:text="Event Date"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idEventOrg"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/idBtnEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:text="Edit Event"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/idBtnViewDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:text="View Details"
            android:textAllCaps="false"/>

    </LinearLayout>
</RelativeLayout>